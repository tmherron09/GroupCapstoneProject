@model GadeliniumGroupCapstone.Models.PetAccount

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";


    string imageBase64 = Convert.ToBase64String(Model.PetProfileImage.Content);
    string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
}

<style>

    img.one {
        float: right;
        width: 35%;
        height: 35%;
    }
</style>


<h1>Details</h1>

<h4><center> @Html.DisplayFor(model => model.PetName)'s PawFile! </center></h4>
<hr />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="PetAccountId" />
<input type="hidden" asp-for="UserId" />
<input type="hidden" asp-for="User" />


<center>
    <a asp-controller="BlockedUsers"
       asp-action="Create" asp-route-id="@Model.PetAccountId">Block This Account</a>
</center>


<div class="container">
    <div class="card-header">

        <img class="float-right" height="150" src="@imageSrc" alt="@Model.PetName" />

        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PetName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PetName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AnimalType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AnimalType)
            </dd>

        </dl>
    </div>


</div>


<a asp-action="Edit" asp-route-id="@Model.PetAccountId">Edit</a> |
<a asp-action="Index">Back to List</a> |
<a asp-controller="MedicalRecords" asp-action="Index" asp-route-petId="@Model.PetAccountId">Medical Record</a>
<a asp-action="Index">Back to List</a> |
<a asp-controller="PetBios"
   asp-action="Details" asp-route-id="@Model.PetAccountId">View My Bio!</a>



