@model GadeliniumGroupCapstone.Models.PetBio

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PetBio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetBioId" />
            <input type="hidden" asp-for="PetAccount" />
            <input type="hidden" asp-for="PetId" />
            <input type="hidden" asp-for="Likes" />
            <input type="hidden" asp-for="Dislikes" />


            <div class="form-group">
                <div class="col-md-20">
                    <label asp-for="PetInfo" class="control-label"></label>
                    <input asp-for="PetInfo" class="form-control" />
                    <span asp-validation-for="PetInfo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Hobbies" class="control-label"></label>
                    <input asp-for="Hobbies" class="form-control" />
                    <span asp-validation-for="Hobbies" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div class="container" align="center">
    <a asp-action="Details" asp-route-id="@Model.PetBioId">Back to Details Page</a> |
    <a asp-action="Delete" asp-route-id="@Model.PetBioId">Delete Bio</a> 
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
