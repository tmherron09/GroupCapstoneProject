@model List<PhotoBin>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<div>
    <h4>PhotoBin</h4>
    <hr />

@{ 
    foreach (PhotoBin photo in Model)
    {
        string imageBase64 = Convert.ToBase64String(photo.Content);
        string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);

        <dl class="row">
            <dt class = "col-sm-2">
                <img src="@imageSrc" alt="@photo.PhotoId" width="100" height="100"/>
            </dt>
        </dl>
    }
}

</div>
<div>
    <a asp-action="Index">Back to List</a>
    <a asp-controller="Upload" asp-action="AddImage">Upload Photo</a>
</div>
